<div id="budgetBenefitWrapper">
  <div class="col-md-10 col-md-offset-1">
    {{#each model}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="col-md-8">{{title}}</div>
        <div class="text-right col-md-2 col-md-offset-2"><strong>Score: {{score}}</strong></div>
      </div>
      <div class="panel-body">
        <div class="col-md-4">
        <ul class="list-unstyled">
          <li><div class="radio">
                <input type="radio" {{bindAttr id="radiovalue1"}} value="option1" name="radioInline">
                <label {{bindAttr for="radiovalue1"}}>{{radiolabel1}}</label>
            </div>
          </li>
          <li><div class="radio">
                <input type="radio" {{bindAttr id="radiovalue2"}} value="option1" name="radioInline">
                <label {{bindAttr for="radiovalue2"}}>{{radiolabel2}}</label>
            </div>
          </li>
          <li><div class="radio">
                <input type="radio" {{bindAttr id="radiovalue3"}} value="option1" name="radioInline">
                <label {{bindAttr for="radiovalue3"}}>{{radiolabel3}}</label>
            </div>
          </li>
        </ul>
        </div>
        <div class="col-md-4">
          <div class="form-horizontal">
          <div class="form-group">
            <div class="col-sm-4">{{input type="text" value=inputvalue1 class="form-control"}}</div>
          </div>
          <div class="form-group">
           <label class="control-label col-sm-1">=</label><div class="col-sm-11">{{input type="text" value=inputvalue2 class="form-control"}}</div>
           </div>
          </div>
          <div class="text-right">
            <button class="btn btn-primary" type="submit">edit formula...</button>
          </div>
        </div>
        <div class="col-md-4">
        {{textarea value=description rows=10 cols=50 class="form-control"}}</div>
      </div>
    </div>
  </div>
   {{/each}}
</div>
